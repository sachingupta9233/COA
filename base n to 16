def convert_int(int_part, base):
    digits = "0123456789ABCDEF"
    if base == 1:
        return '1'
    elif int_part == 0:
        return '0'
    result = ''
    while int_part > 0:
        result = digits[int_part % base] + result
        int_part //= base
    return result

def convert_frac(frac_part, base, precision=6):
    digits = "0123456789ABCDEF"
    result = ''
    count = 0
    while frac_part > 0 and count < precision:
        frac_part *= base
        digit = int(frac_part)
        result += digits[digit]
        frac_part -= digit
        count += 1
    return result if result else '0'

# Main program
decimal_input = float(input("Enter the Decimal Number: "))
base = int(input("Enter the base of the destination Number System (up to 16): "))

int_part = int(decimal_input)
frac_part = decimal_input - int_part

converted_int = convert_int(int_part, base)
converted_frac = convert_frac(frac_part, base)

print(f"\nDecimal {decimal_input} converted into Base-{base} = {converted_int}.{converted_frac}")
